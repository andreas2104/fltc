// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId        String    @id @default(uuid())
  name          String
  firstName     String
  email         String    @unique
  contact       String    @unique
  password      String
  role          Boolean   // true = admin
  createdAt     DateTime  @default(now())
  emailVerified DateTime?
}

model Promotion {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  totalFee    Int       
  students    Student[]
}

model Student {
  id          Int       @id @default(autoincrement())
  name        String
  firstName   String?   // Added to keep consistency with previous model if needed, or can be removed if strictly following user proposal. Keeping for safety as 'name' was split in previous schema.
  image       String?   // Path to uploaded image
  phone       String?   // Contact phone number
  promotionId Int
  promotion   Promotion @relation(fields: [promotionId], references: [id])
  status      String    @default("PENDING") // Suggestion: Use Enum if strict strict control is needed, but String is what user asked.
  payments    Payment[]
  createdAt   DateTime  @default(now())
}

model Payment {
  id        Int      @id @default(autoincrement())
  amount    Int
  date      DateTime @default(now())
  month     String
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])
}