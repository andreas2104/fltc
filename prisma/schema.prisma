// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum StudentStatus {
  PENDING     // Frais en cours
  COMPLETED   // Tous les frais payés
  OVERDUE     // En retard (date limite dépassée)
}

enum FeeType {
  DROITS_ANNUELS  // Ex. : 2000 une fois
  ECOLAGE_MENSUEL // Ex. : 1000 par mois
}

model User {
  userId        String    @id @default(uuid())
  name          String
  firstName     String
  email         String    @unique
  contact       String    @unique
  password      String
  role          Boolean   // true = admin
  centerId      Int
  createdAt     DateTime  @default(now())
  emailVerified DateTime?

}



model Student {
  studentId      Int           @id @default(autoincrement())
  name           String
  firstName      String
  contact        String
  identity       String        // CIN ou carte étudiant
  centerId       Int
  status         StudentStatus @default(PENDING)  // Mis à jour auto après paiements
  createdAt      DateTime      @default(now())
  fees           Fees[]
  pay            Pay[]
}

model Fees {
  feesId    Int      @id @default(autoincrement())
  price     Int      // Ex. : 2000 pour droits, 1000 pour écolage
  feeType   FeeType  // DROITS_ANNUELS ou ECOLAGE_MENSUEL
  month     String?  // Pour écolage : "janvier-2025" ; null pour droits annuels
  studentId Int
  student   Student  @relation(fields: [studentId], references: [studentId], onDelete: Cascade)
  pay       Pay[]

  @@index([studentId, feeType])  // Perf pour calculs par type
}

model Pay {
  payId     Int      @id @default(autoincrement())
  amount    Int      // Montant payé
  month     String   // Ex. : "janvier-2025"
  studentId Int
  student   Student  @relation(fields: [studentId], references: [studentId], onDelete: Cascade)
  feesId    Int
  fees      Fees     @relation(fields: [feesId], references: [feesId], onDelete: Cascade)

  @@index([studentId, month])  
  @@index([feesId])
}